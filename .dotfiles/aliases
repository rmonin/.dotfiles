#!/bin/sh
# ----------------------------------------------------------------------
# Shell Aliases Configuration:
# ----------------------------------------------------------------------
# Contains custom aliases that provide shortcuts for commonly used
# commands or command sequences.
# ----------------------------------------------------------------------

# Act
alias act='act --container-architecture linux/amd64'

# dmesg
alias wtf='sudo dmesg | less'

# Filesystem operation
alias cp='cp -iv'
alias mv='mv -iv'
alias rm='rm -iv'
alias lr='ls - lrah'
alias ldot='ls -ld .*' 

# Git
alias -g yolo='commit -m "Dummy msg | $(curl -s https://whatthecommit.com/index.txt)"'

# VSCodium
alias c='codium'
